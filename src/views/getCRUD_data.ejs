<body>
    <table class="table table-dark">
        
          <tr>
            <th scope="col">#</th>
            <th scope="col">name</th>
            <th scope="col">email</th>
            <th scope="col">phone</th>
            <th scope="col">rol</th>
            <th scope="col">action</th>


          </tr>
        
       
          
          <% for(let i=0; i < dataTable.length; i++) { %>
            <tr scope="row">
                <td><%= i + 1 %></td>  
                <td><%= dataTable[i].name %></td>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].phone %></td>
                <td><%= dataTable[i].roleid %></td>  
                <td>
                    <a href="/edit-crud?id=<%=dataTable[i].id %>" type="button">edit</a>
                    
                    <a href="/delete-crud?id=<%=dataTable[i].id %>" type="button">delete</a>
                </td>  
                
                
            </tr>
         <% } %>
         
      </table>
</body>
</html>